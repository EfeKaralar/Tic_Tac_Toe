<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/two1"
        android:layout_width="96dp"
        android:layout_height="128dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="134dp"
        android:onClick="CheckMove"
        app:backgroundTint="#3F51B5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/one1" />

    <Button
        android:id="@+id/two2"
        android:layout_width="96dp"
        android:layout_height="128dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="132dp"
        android:onClick="CheckMove"
        app:backgroundTint="#3F51B5"
        app:layout_constraintStart_toEndOf="@+id/two1"
        app:layout_constraintTop_toTopOf="@id/one2" />

    <Button
        android:id="@+id/one1"
        android:layout_width="96dp"
        android:layout_height="128dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="256dp"
        android:onClick="CheckMove"
        app:backgroundTint="#3F51B5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/one2"
        android:layout_width="96dp"
        android:layout_height="128dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="256dp"
        android:onClick="CheckMove"
        app:backgroundTint="#3F51B5"
        app:layout_constraintStart_toEndOf="@+id/one1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/one3"
        android:layout_width="96dp"
        android:layout_height="128dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:onClick="CheckMove"
        app:backgroundTint="#3F51B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/one2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/two3"
        android:layout_width="96dp"
        android:layout_height="128dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:onClick="CheckMove"
        app:backgroundTint="#3F51B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/two2"
        app:layout_constraintTop_toTopOf="@id/one3" />

    <Button
        android:id="@+id/three1"
        android:layout_width="96dp"
        android:layout_height="128dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="134dp"
        android:onClick="CheckMove"
        app:backgroundTint="#3F51B5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/two1" />

    <Button
        android:id="@+id/three2"
        android:layout_width="96dp"
        android:layout_height="128dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="134dp"
        android:onClick="CheckMove"
        app:backgroundTint="#3F51B5"
        app:layout_constraintStart_toEndOf="@+id/three1"
        app:layout_constraintTop_toTopOf="@id/two2" />

    <Button
        android:id="@+id/three3"
        android:layout_width="96dp"
        android:layout_height="128dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:onClick="CheckMove"
        app:backgroundTint="#3F51B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/three2"
        app:layout_constraintTop_toTopOf="@id/two3" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Tic Tac Toe!"
        android:textColor="#3F51B5"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/turnOfTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="128dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:text="Turn:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/one1"
        app:layout_constraintEnd_toStartOf="@+id/turnOf"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/turnOf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="X"
        android:textColor="#FF0000"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/one2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/moveCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="128dp"
        android:text="0"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/playAgain"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:text="Play Again?"
        android:visibility="invisible"
        android:enabled="false"
        android:onClick="PlayAgain"
        app:backgroundTint="#E91E63"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/three2" />
</androidx.constraintlayout.widget.ConstraintLayout>
